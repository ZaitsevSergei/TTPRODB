<UserControl x:Class="TTPRODB.TTPRODBExecution.Filters.ProducersFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TTPRODB.TTPRODBExecution.Filters"
             mc:Ignorable="d" 
             Height="auto" d:DesignWidth="300">
    <Border Style="{StaticResource ResourceKey=FilterBorderStyle}">
        <StackPanel>
            <TextBlock Text="Producer" Style="{StaticResource ResourceKey=FilterTitleStyle}"/>
            <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="ProducersStackPanel" MaxHeight="150" />
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
