<UserControl x:Class="TTPRODB.TTPRODBExecution.Filters.CharacteristicFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TTPRODB.TTPRODBExecution.Filters"
             mc:Ignorable="d" 
             Height="40"
             d:DesignWidth="80.166">
    <Border Style="{StaticResource ResourceKey=FilterBorderStyle}" >
        <StackPanel HorizontalAlignment="Center" Margin="0,2,0,2">
            <TextBlock Name="TitleTextBlock" Text="FilterTitle" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="Value1TextBox" Text="" Style="{StaticResource ResourceKey=FilterTextboxFieldStyle}" Height="18" PreviewKeyDown="ValueTextBox_OnPreviewKeyDown"/>
                <TextBlock Text="-" Style="{StaticResource ResourceKey=FilterHyphenStyle}" Margin="5,0,5,0" Width="5" Height="18"/>
                <TextBox Name="Value2TextBox" Text="" Style="{StaticResource ResourceKey=FilterTextboxFieldStyle}" Height="18" PreviewKeyDown="ValueTextBox_OnPreviewKeyDown"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
